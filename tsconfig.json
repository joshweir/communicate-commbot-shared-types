{
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"],
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "incremental": true,
    "strict": true,
    "jsx": "react",
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noErrorTruncation": true,
    "forceConsistentCasingInFileNames": true,
    "target": "es2019",
    "composite": true,
    "declarationMap": true,
    "resolveJsonModule": true,
    "lib": ["es2020"]
  }
}
